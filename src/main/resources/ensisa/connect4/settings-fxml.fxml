<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="620.0" prefWidth="720.0" style="-fx-background-color: #92bccd;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ensisa.connect4.SettingsController">
    <VBox alignment="CENTER" spacing="20.0" layoutX="160.0" layoutY="200.0">
        <Label text="Settings" style="-fx-font-family: 'Quicksand'; -fx-font-size: 36px; -fx-text-fill: #333333;"/>
        <VBox spacing="15.0">
            <Label text="Volume Control" style="-fx-font-family: 'Quicksand'; -fx-font-size: 18px; -fx-text-fill: #333333;"/>
            <Slider fx:id="volumeSlider" min="0.0" max="100.0" value="50.0" style="-fx-control-inner-background: #7ba8a3;"/>
        </VBox>
        <Button text="Back" onAction="#handleBack" style="-fx-background-radius: 15; -fx-background-color: #f06292; -fx-text-fill: white; -fx-font-family: 'Quicksand'; -fx-font-size: 18px;"/>
    </VBox>
    <effect>
        <DropShadow color="#666666" radius="5.0"/>
    </effect>
</AnchorPane>
