<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: #bed1e2; -fx-padding: 40px;" xmlns:fx="http://javafx.com/fxml" fx:controller="ensisa.connect4.MenuController">
    <Label text="Connect 4" style="-fx-font-family: 'Quicksand'; -fx-font-size: 36px; -fx-text-fill: #333333;"/>
    <Button fx:id="vsPlayerButton" text="Play vs Player" onAction="#handleVsPlayer" style="-fx-background-color: #a3c4f3; -fx-text-fill: white; -fx-background-radius: 20px; -fx-font-family: 'Quicksand'; -fx-font-size: 24px; -fx-min-width: 200px; -fx-min-height: 50px;"/>
    <Button fx:id="vsAIButton" text="Play vs AI" onAction="#handleVsAI" style="-fx-background-color: #a3c4f3; -fx-text-fill: white; -fx-background-radius: 20px; -fx-font-family: 'Quicksand'; -fx-font-size: 24px; -fx-min-width: 200px; -fx-min-height: 50px;"/>
    <Button fx:id="settingsButton" text="Settings" onAction="#handleSettings" style="-fx-background-color: transparent; -fx-underline: true; -fx-font-family: 'Quicksand'; -fx-font-size: 18px; -fx-text-fill: #555555;"/>
    <Button fx:id="exitButton" text="Exit" onAction="#handleExit" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-background-radius: 20px; -fx-font-family: 'Quicksand'; -fx-font-size: 24px; -fx-min-width: 200px; -fx-min-height: 50px;"/>
</VBox>
